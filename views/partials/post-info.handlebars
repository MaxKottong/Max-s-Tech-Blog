<div class="card">
    <div class="card-header title">
        <a href="/dashboard/edit/{{id}}">{{title}}</a>
    </div>
    <div class="card-body">
        <p class="card-text">{{post_content}}</p>
    </div>
    <div class="card-footer text-muted">
        Posted by {{user.username}} on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</div>